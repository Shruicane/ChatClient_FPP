<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="509.0" prefWidth="300.0" spacing="5.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.luma.client.frontend.controller.LoginScreenController">
   <children>
      <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="27.0" prefWidth="340.0" text="Login" textAlignment="CENTER" underline="true">
         <font>
            <Font size="20.0" />
         </font>
         <VBox.margin>
            <Insets bottom="10.0" />
         </VBox.margin>
      </Label>
      <Label text="Username">
         <VBox.margin>
            <Insets top="20.0" />
         </VBox.margin>
         <font>
            <Font size="14.0" />
         </font>
      </Label>
      <TextField fx:id="userNameTextField" />
      <Label text="Password">
         <font>
            <Font size="14.0" />
         </font>
         <VBox.margin>
            <Insets top="20.0" />
         </VBox.margin>
      </Label>
      <PasswordField fx:id="passWordTextField" onAction="#onClickLogin" />
      <Button fx:id="loginButton" mnemonicParsing="false" onAction="#onClickLogin" prefHeight="25.0" prefWidth="289.0" text="Login">
         <VBox.margin>
            <Insets top="70.0" />
         </VBox.margin>
      </Button>
      <Label fx:id="createAccountLabel" alignment="CENTER" onMouseClicked="#onClickAccountLabel" prefHeight="17.0" prefWidth="309.0" text="Don't have an Account yet? Register!" textFill="#008cff" underline="true">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
         <VBox.margin>
            <Insets top="180.0" />
         </VBox.margin>
      </Label>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
